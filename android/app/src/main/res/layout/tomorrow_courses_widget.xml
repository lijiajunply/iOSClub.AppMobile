<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_modern_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 课表区域 - 水平排列 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- 今日课程区域 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/today_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日课程"
                android:textColor="@color/widget_section_text_light"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- 今日课程列表 -->
            <ListView
                android:id="@+id/today_courses_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"/>

            <!-- 今日无课视图 -->
            <TextView
                android:id="@+id/today_empty_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="今日无课"
                android:textColor="@color/widget_empty_text_light"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 分隔线 -->
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/widget_divider_light"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

        <!-- 明日课程区域 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                android:id="@+id/tomorrow_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明日课程"
                android:textColor="@color/widget_section_text_light"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />
            
                <TextView
                    android:id="@+id/tomorrow_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12月16日"
                    android:textColor="@color/widget_date_text_light"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <!-- 明日课程列表 -->
            <ListView
                android:id="@+id/tomorrow_courses_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="8dp"
                android:layout_marginTop="8dp"/>

        <!-- 明日无课视图 -->
        <TextView
            android:id="@+id/tomorrow_empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="明日无课"
            android:textColor="@color/widget_empty_text_light"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>