<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_modern_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 左侧标题区域 -->
        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="近日课表"
                android:textColor="@color/widget_title_text_light"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 右侧日期区域 -->
        <LinearLayout
            android:id="@+id/date_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第1周 周一"
                android:textColor="@color/widget_date_text_light"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider_light"
        android:layout_marginVertical="12dp" />

    <!-- 今日课程区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/today_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日课程"
            android:textColor="@color/widget_section_text_light"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- 今日课程列表 -->
        <ListView
            android:id="@+id/today_courses_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="8dp"
            android:layout_marginBottom="16dp" />

        <!-- 今日无课视图 -->
        <TextView
            android:id="@+id/today_empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今日无课"
            android:textColor="@color/widget_empty_text_light"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- 明日课程区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tomorrow_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明日课程"
                android:textColor="@color/widget_section_text_light"
                android:textSize="14sp" />
            
            <TextView
                android:id="@+id/tomorrow_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12月16日"
                android:textColor="@color/widget_date_text_light"
                android:textSize="12sp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <!-- 明日课程列表 -->
        <ListView
            android:id="@+id/tomorrow_courses_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="8dp" />

        <!-- 明日无课视图 -->
        <TextView
            android:id="@+id/tomorrow_empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="明日无课"
            android:textColor="@color/widget_empty_text_light"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>